{
  "version": "1.3.2",
  "license": "MIT",
  "description": "ChargeAfter payment SDK.\nThis is the preferred integration approach for stores that don't work with supported eCommerce platforms.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chargeafter-rnd/sdk.git"
  },
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src",
    "types"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test --passWithNoTests",
    "lint": "tsdx lint src test",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "storybook": "NODE_OPTIONS=--openssl-legacy-provider start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "all",
    "endOfLine": "auto"
  },
  "name": "@chargeafter/payment-sdk",
  "author": "Kosta Triger",
  "module": "dist/sdk.esm.js",
  "size-limit": [
    {
      "path": "dist/payment-sdk.cjs.production.min.js",
      "limit": "1 KB"
    },
    {
      "path": "dist/payment-sdk.esm.js",
      "limit": "1 KB"
    }
  ],
  "devDependencies": {
    "@babel/core": "^7.15.8",
    "@chargeafter/payment-types": "^0.0.16",
    "@size-limit/preset-small-lib": "^6.0.3",
    "@storybook/addon-essentials": "^6.3.12",
    "@storybook/addon-info": "^5.3.21",
    "@storybook/addon-links": "^6.3.12",
    "@storybook/addons": "^6.3.12",
    "@storybook/react": "^6.3.12",
    "@tsconfig/create-react-app": "^1.0.2",
    "@types/react": "^17.0.32",
    "@types/react-dom": "^17.0.10",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "babel-loader": "^8.2.3",
    "eslint-config-prettier": "^7.2.0",
    "eslint-config-react-app": "^6.0.0",
    "eslint-plugin-prettier": "^3.4.1",
    "husky": "^7.0.4",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-is": "^17.0.2",
    "size-limit": "^6.0.3",
    "tsdx": "^0.14.1",
    "tslib": "^2.3.1",
    "typescript": "^4.4.4"
  },
  "resolutions": {
    "eslint-config-react-app": "6.0.0"
  },
  "keywords": [
    "chargeafter",
    "charge after"
  ]
}
